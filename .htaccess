# Enable GZIP Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set Proper MIME Types
<IfModule mod_mime.c>
  AddType application/javascript js
  AddType text/css css
  AddType image/svg+xml svg svgz
  AddEncoding gzip svgz
</IfModule>

# Enable Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # Cache images for 1 year
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # Cache CSS and JavaScript for 1 month
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"

  # Cache HTML for 24 hours
  ExpiresByType text/html "access plus 24 hours"
</IfModule>

# Set Cache-Control Headers
<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|svg|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=86400"
  </FilesMatch>

  <FilesMatch "\.(xml|json)$">
    Header set Cache-Control "public, max-age=604800"
  </FilesMatch>

  # Security Headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # Content Security Policy - Optimized for portfolio embed + Cloudflare Analytics
  # FIXES:
  # 1. Supprimé frame-ancestors 'self' (bloquait l'iframe du portfolio)
  # 2. Ajouté https://maximenardelli.fr pour ressources du portfolio
  # 3. Ajouté https://static.cloudflareinsights.com et https://cloudflareinsights.com pour beacon.min.js
  # 4. Ajouté https://fonts.googleapis.com et https://fonts.gstatic.com pour Google Fonts
  # 5. Ajouté https://ka-f.fontawesome.com pour FontAwesome webfonts
  Header set Content-Security-Policy "default-src 'self' https://maximenardelli.fr; script-src 'self' 'unsafe-inline' https://maximenardelli.fr https://static.cloudflareinsights.com https://cloudflareinsights.com https://kit.fontawesome.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://maximenardelli.fr https://fonts.googleapis.com https://kit-free.fontawesome.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://kit-free.fontawesome.com https://ka-f.fontawesome.com; img-src 'self' data: https: https://maximenardelli.fr; connect-src 'self' https: https://static.cloudflareinsights.com https://cloudflareinsights.com; upgrade-insecure-requests;"
</IfModule>

# URL Rewriting - Handle clean URLs
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Set the base path for the subdomain
  RewriteBase /

  # Remove www if present
  RewriteCond %{HTTP_HOST} ^www\.ohmyfood\.maximenardelli\.fr$ [NC]
  RewriteRule ^(.*)$ https://ohmyfood.maximenardelli.fr/$1 [R=301,L]

  # Redirect HTTP to HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # Prevent access to protected directories
  RewriteRule ^\.htaccess$ - [F]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(assets/SASS|assets/CSS/scss)(/|$) - [F]
</IfModule>

# Disable Directory Listing
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

# Prevent Access to Sensitive Files
<FilesMatch "^\.(htaccess|htpasswd|git|env)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# Block access to SASS source files
<FilesMatch "\.scss$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>
